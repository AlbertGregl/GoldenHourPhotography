<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?colorPrimary"
    app:cardCornerRadius="@dimen/_9dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvDate"
                android:layout_width="@dimen/_220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:gravity="center_vertical"
                android:textColor="?colorOnPrimary"
                android:textSize="@dimen/_24sp" />

            <ImageView
                android:id="@+id/ivWeatherIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:contentDescription="@string/weather_icon"
                android:tooltipText="@string/some_text" />


        </LinearLayout>


        <TextView
            android:id="@+id/tvGoldenHour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_20dp"
            android:gravity="center_vertical"
            android:textColor="?colorOnPrimary"
            android:textSize="@dimen/_24sp"
            android:textStyle="bold" />


        <!-- additional details layout -->
        <LinearLayout
            android:id="@+id/additionalDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvTimeZone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20dp"
                android:gravity="center_vertical"
                android:textColor="?colorOnPrimary"
                android:textSize="@dimen/_24sp" />

            <TextView
                android:id="@+id/tvSunrise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20dp"
                android:gravity="center_vertical"
                android:textColor="?colorOnPrimary"
                android:textSize="@dimen/_24sp" />

            <TextView
                android:id="@+id/tvSunset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20dp"
                android:gravity="center_vertical"
                android:textColor="?colorOnPrimary"
                android:textSize="@dimen/_24sp" />

            <TextView
                android:id="@+id/tvFirstLight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20dp"
                android:gravity="center_vertical"
                android:textColor="?colorOnPrimary"
                android:textSize="@dimen/_24sp" />

            <TextView
                android:id="@+id/tvLastLight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20dp"
                android:gravity="center_vertical"
                android:textColor="?colorOnPrimary"
                android:textSize="@dimen/_24sp" />

            <TextView
                android:id="@+id/tvDawn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20dp"
                android:gravity="center_vertical"
                android:textColor="?colorOnPrimary"
                android:textSize="@dimen/_24sp" />

            <TextView
                android:id="@+id/tvDusk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20dp"
                android:gravity="center_vertical"
                android:textColor="?colorOnPrimary"
                android:textSize="@dimen/_24sp" />

            <TextView
                android:id="@+id/tvWeatherWidget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20dp"
                android:gravity="center_vertical"
                android:textColor="?colorOnPrimary"
                android:textSize="@dimen/_24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>