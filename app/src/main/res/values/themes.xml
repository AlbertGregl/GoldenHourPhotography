<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoldenHourPhotography" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/golden</item>
        <item name="colorPrimaryVariant">@color/dark_golden</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/sepia</item>
        <item name="colorSecondaryVariant">@color/light_sepia</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.GoldenHourPhotography">
        <item name="android:textSize">@dimen/_50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>